<ul>
  <% current_user.notifications.order(created_at: :desc).each do |notification| %>
    <li>
      <b>
        <% if notification.url %>
          <%= link_to notification.title, notification.url %>
        <% else %>
          <%= notification.title %>
        <% end %>
      </b>:
      <%= notification.description %>
    </li>
  <% end %>
</ul>
