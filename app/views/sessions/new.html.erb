<div class="centered">
  <h1>Login</h1>

  <%= form_tag login_path do %>

    <div>
      <label>Email or username:</label>
      <%= text_field_tag :username %>
    </div>

    <div>
      <label>Password</label>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag 'Login', class: 'button' %>

  <% end %>
</div>
