<!DOCTYPE html>
<html>
  <head>
    <title>TecwebGrupo17</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-menu">
      <div><%= link_to "Home", root_path, class: "button" %></div>
      <div class="right">
        <% if current_user %>
          <%= link_to "View my profile", user_path(current_user), class: "button" %>
           |
          <%= link_to "Logout", '/logout', class: "button" %>
        <% else %>
          <%= link_to "Login", '/login', class: "button" %>
           |
          <%= link_to "Register", new_user_path, class: "button" %>
        <% end %>
      </div>
    </div>
    <div id="app-body">
      <%= yield %>
    </div>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
